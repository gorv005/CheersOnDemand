<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlView"
    android:background="@color/profile_back"
    tools:context="com.cheersondemand.view.fragments.FragmentOrderDetail">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/llOrderNo"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:fontFamily="@font/sf_ui_display_regular"
                android:gravity="left"
                android:maxLines="1"

                android:text="@string/order_no"
                android:textColor="@color/item_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:fontFamily="@font/sf_ui_display_regular"
                android:gravity="left"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:text="Bank Of0% off of fjfad"
                android:textColor="@color/profile_text_color"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:fontFamily="@font/sf_ui_display_regular"
                android:gravity="left"
                android:maxLines="1"
                android:text="@string/order_date"
                android:textColor="@color/item_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/linearLayout2"
                android:layout_gravity="left"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/sf_ui_display_regular"
                android:gravity="left"
                android:maxLines="1"
                android:text="Bank Of0% off of fjfad"
                android:textColor="@color/profile_text_color"
                android:textSize="14sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_below="@id/llOrderNo"
            android:layout_height="wrap_content"

           >

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlItem"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    >

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="90dp"
                        >

                        <ImageView
                            android:id="@+id/ivProductImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/missing"
                            android:textColor="@color/offer_text"

                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="70dp"
                        android:orientation="vertical"
                        android:id="@+id/linearLayout2">

                        <TextView

                            android:id="@+id/tvProductName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_ui_display_regular"
                            android:gravity="left"
                            android:text="Bank Of0% off of fjfad"
                            android:textColor="@color/profile_text_color"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_ui_display_regular"
                            android:gravity="left"
                            android:text="Quantity:1"
                            android:textColor="@color/item_color"
                            android:textSize="14sp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/sf_ui_display_regular"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:text="@string/price"
                                    android:textColor="@color/item_color"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/sf_ui_display_regular"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:layout_marginLeft="5dp"
                                    android:text="$5.49"
                                    android:textColor="@color/red"
                                    android:textSize="14sp" />
                            </LinearLayout>




                            <TextView

                                android:id="@+id/tvMoreProducts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/sf_ui_display_regular"
                                android:gravity="center_vertical"
                                android:text="bb"
                                android:textColor="@color/profile_text_color"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>


                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_regular"
            android:gravity="left"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:text="@string/order_status"
            android:textColor="@color/spec_desc"
            android:textSize="14sp" />
            <LinearLayout
                android:id="@+id/llTrackOrder"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_regular"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/track_order"
            android:textColor="@color/profile_text_color"
            android:textSize="14sp" />
                <View
                    android:background="@color/profile_text_color"
                    android:layout_width="70dp"
                    android:layout_height="2dp"/>
            </LinearLayout>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvOrderStatus"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:visibility="visible"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_regular"
            android:gravity="left"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:text="@string/shipingDetail"
            android:textColor="@color/spec_desc"
            android:textSize="14sp" />
        <RelativeLayout
            android:id="@+id/add"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/rlAddName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:textColor="@color/profile_text_color"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="Name"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </RelativeLayout>
            <TextView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/rlAddName"
                android:id="@+id/tvSubAddress1"
                android:textColor="@color/item_color"
                android:fontFamily="@font/sf_ui_display_regular"
                android:text="Name"
                android:visibility="gone"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/tvSubAddress1"
                android:id="@+id/tvSubAddress2"
                android:textColor="@color/item_color"
                android:fontFamily="@font/sf_ui_display_regular"
                android:text="Name"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/tvSubAddress2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="@color/item_color"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/PhoneNumber_"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:id="@+id/tvPhone"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/profile_text_color"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/PhoneNumber_"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
