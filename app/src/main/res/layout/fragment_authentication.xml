<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/LLView"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/symbol"
                        android:layout_width="fill_parent"
                        android:layout_height="190dp"
                        android:background="@drawable/top_banner"
                        android:scaleType="fitXY" />
                    <TextView
                        android:layout_marginLeft="25.9dp"
                        android:layout_marginTop="53.8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20.2sp"
                        android:textColor="@color/white"
                        android:text="@string/cheers_on_demand"
                        />
                    <TextView
                        android:layout_marginLeft="25.9dp"
                        android:layout_marginTop="83.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.4sp"
                        android:textColor="@color/white"
                        android:text="@string/get_started"
                        />

                    <ImageView
                        android:layout_marginTop="40.1dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/glass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="125dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rounded_upper_corner" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/viewSignUp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="263dp"
                        android:layout_marginTop="40dp"
                        android:layout_height="50dp">
                        <RelativeLayout

                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/btnLoginTab"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:background="@drawable/bg_button_signup_no_selected"
                                android:text=""
                                android:textColor="@color/editext_hint_color" />

                        </RelativeLayout>

                        <Button
                            android:id="@+id/btnSignUpTab"

                            android:layout_width="139.9dp"
                            android:layout_height="50dp"
                            android:elevation="20dp"
                            android:textSize="13.4sp"
                            android:textAllCaps="false"
                            android:background="@drawable/bg_button_signup_selected"
                            android:text="@string/signup"
                            android:textColor="@color/white" />
                        <TextView
                            android:layout_toEndOf="@id/btnSignUpTab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:textSize="13.4sp"
                            android:textColor="@color/light_text"
                            android:text="@string/log_in" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/viewSignIn"
                        android:layout_centerHorizontal="true"
                        android:layout_width="263dp"
                        android:layout_marginTop="40dp"
                        android:layout_height="50dp">
                        <RelativeLayout

                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/btnSignUpTabLoginView"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:background="@drawable/bg_button_signup_no_selected"
                                android:text=""
                                android:textColor="@color/editext_hint_color" />

                        </RelativeLayout>

                        <Button
                            android:id="@+id/btnLoginTabLoginView"
                            android:layout_alignParentEnd="true"
                            android:layout_width="139.9dp"
                            android:layout_height="50dp"
                            android:elevation="20dp"
                            android:textSize="13.4sp"
                            android:textAllCaps="false"
                            android:background="@drawable/bg_button_signup_selected"
                            android:text="@string/log_in"
                            android:textColor="@color/white" />
                        <TextView
                            android:layout_toStartOf="@id/btnLoginTabLoginView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:textSize="13.4sp"
                            android:textColor="@color/light_text"
                            android:text="@string/signup" />
                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/viewA"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">


                    <EditText
                        android:drawableLeft="@drawable/ic_username"
                        android:id="@+id/etName"
                        android:textCursorDrawable="@drawable/edit_text_cursor_color"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="29.8dp"
                        android:layout_marginEnd="30.7dp"
                        android:background="@drawable/edit_text_back"
                        android:drawablePadding="20dp"
                        android:hint="@string/name"
                        android:textColor="@color/editext_text_color"
                        android:textColorHint="@color/editext_hint_color"
                        android:textSize="14.4sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:drawableLeft="@drawable/ic_email"

                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:textCursorDrawable="@drawable/edit_text_cursor_color"

                        android:layout_marginTop="10dp"
                        android:layout_marginStart="29.8dp"
                        android:layout_marginEnd="30.7dp"
                        android:background="@drawable/edit_text_back"
                        android:drawablePadding="20dp"
                        android:hint="@string/email"
                        android:textColor="@color/editext_text_color"
                        android:textColorHint="@color/editext_hint_color"
                        android:textSize="14.4sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.cheersondemand.util.CustomEditText

                        android:drawableLeft="@drawable/ic_password"
                        android:id="@+id/etPassword"
                        android:textCursorDrawable="@drawable/edit_text_cursor_color"

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="29.8dp"
                        android:layout_marginEnd="30.7dp"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/ic_eye"
                        android:background="@drawable/edit_text_back"
                        android:drawablePadding="20dp"
                        android:hint="@string/password"
                        android:textColor="@color/editext_text_color"
                        android:textColorHint="@color/editext_hint_color"
                        android:textSize="14.4sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="13.4sp"
                        android:layout_marginStart="29.8dp"
                        android:layout_marginEnd="30.7dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_button_noborder"
                        android:text="@string/signup"
                        android:textAllCaps="true"
                        />


                </FrameLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/social_back"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="or Sign up via"
                        android:textColor="@color/light_text"
                        android:textSize="10.6sp" />


                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btnFbLogin"
                            android:layout_width="126.1dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="8.1dp"
                            android:layout_gravity="start"
                            android:paddingStart="20dp"
                            android:textSize="13.8sp"
                            android:drawableLeft="@drawable/ic_facebook"
                            android:background="@drawable/bg_button_fb"
                            android:text="@string/facebook"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                        <Button
                            android:layout_marginLeft="16.1dp"
                            android:id="@+id/btnGoogleLogin"
                            android:layout_width="126.1dp"
                            android:drawableLeft="@drawable/ic_google"
                            android:layout_height="40dp"
                            android:paddingStart="25dp"
                            android:textSize="13.8sp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_button_google"
                            android:text="@string/google"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <com.facebook.login.widget.LoginButton
                        android:id="@+id/login_button"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12.5sp"
                        android:layout_marginTop="14.6dp"
                        android:textColor="@color/light_text"
                        android:gravity="center_horizontal"
                        android:text="@string/agreement"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12.5sp"
                        android:textColor="#31414f"
                        android:gravity="center_horizontal"
                        android:text="@string/term_cond"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14.4sp"
                        android:layout_marginTop="13.2dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/light_text"
                        android:text="@string/skip_continue"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:visibility="visible"
                android:id="@+id/viewB"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">



                <FrameLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:drawableLeft="@drawable/ic_email"

                        android:id="@+id/etEmailLogin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:textCursorDrawable="@drawable/edit_text_cursor_color"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="29.8dp"
                        android:layout_marginEnd="30.7dp"
                        android:background="@drawable/edit_text_back"
                        android:drawablePadding="20dp"
                        android:hint="@string/email"
                        android:textColor="@color/editext_text_color"
                        android:textColorHint="@color/editext_hint_color"
                        android:textSize="14.4sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.cheersondemand.util.CustomEditText
                        android:drawableLeft="@drawable/ic_password"
                        android:id="@+id/etPasswordLogin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textCursorDrawable="@drawable/edit_text_cursor_color"

                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="29.8dp"
                        android:layout_marginEnd="30.7dp"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/ic_eye"
                        android:background="@drawable/edit_text_back"
                        android:drawablePadding="20dp"
                        android:hint="@string/password"
                        android:textColor="@color/editext_text_color"
                        android:textColorHint="@color/editext_hint_color"
                        android:textSize="14.4sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textSize="13.4sp"
                        android:layout_marginStart="29.8dp"
                        android:layout_marginEnd="30.7dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_button_noborder"
                        android:text="@string/login"
                        android:textAllCaps="true"
                        />


                </FrameLayout>

                <FrameLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12.5sp"
                        android:textColor="@color/forgot_color"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="@string/forgot_password"
                        />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/social_back"
                    android:orientation="vertical">


                    <TextView
                        android:paddingTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10.6sp"
                        android:textColor="@color/light_text"
                        android:gravity="center_horizontal"
                        android:text="or Continue via"
                        />

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btnFbLoginViewLogin"
                            android:layout_width="126.1dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="8.1dp"
                            android:layout_gravity="start"
                            android:paddingStart="20dp"
                            android:textSize="13.8sp"
                            android:drawableLeft="@drawable/ic_facebook"
                            android:background="@drawable/bg_button_fb"
                            android:text="@string/facebook"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                        <Button
                            android:layout_marginLeft="16.1dp"
                            android:id="@+id/btnGoogleLoginViewLogin"
                            android:layout_width="126.1dp"
                            android:drawableLeft="@drawable/ic_google"
                            android:layout_height="40dp"
                            android:paddingStart="25dp"
                            android:textSize="13.8sp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_button_google"
                            android:text="@string/google"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14.4sp"
                        android:layout_marginTop="13.2dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/light_text"
                        android:text="@string/skip_continue"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>