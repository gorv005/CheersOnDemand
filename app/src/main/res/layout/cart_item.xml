<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:background="@drawable/rounded_white"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp"
    card_view:cardElevation="2dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:id="@+id/rlCard"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:id="@+id/llProfileView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            >

            <LinearLayout
                android:id="@+id/llProductNotAvailable"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/alert"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="@string/this_product_no_longer_available"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlImage"
                android:layout_alignParentLeft="true"
                android:layout_width="90dp"
                android:layout_height="90dp">

                <ImageView

                    android:id="@+id/imgProduct"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/group_6"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlInfo"
                android:layout_toRightOf="@id/rlImage"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="Wither Hills Sauvignon Blan"
                    android:textColor="@color/profile_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_below="@id/tvName"
                    android:id="@+id/tvSubName"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="3.8 ounces"
                    android:maxLines="1"
                    android:textColor="@color/profile_email_color"
                    android:textSize="12sp" />
                <TextView
                    android:layout_below="@id/tvSubName"
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="$120"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:textColor="@color/profile_text_color"
                    android:textSize="14.4sp" />

            </RelativeLayout>
            <RelativeLayout
                android:paddingBottom="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_alignParentRight="true"
                android:background="@drawable/cart_quantity_border"
                android:layout_width="84dp"
                android:layout_alignParentBottom="true"
                android:layout_height="28dp"
                android:layout_marginBottom="10dp"

                >

                <LinearLayout
                    android:background="@drawable/cart_quantity_border"
                    android:layout_width="204dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom">

                    <RelativeLayout
                        android:id="@+id/rlMinus"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                        <ImageView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/minus"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                        <TextView
                            android:id="@+id/tvQuantity"

                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="20"
                            android:fontFamily="@font/sf_ui_display_regular"
                            android:layout_centerVertical="true"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlPlus"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                        <ImageView
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/plus"
                            android:padding="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>


            </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl"
                    android:layout_marginEnd="66dp"
                    android:layout_marginTop="41dp"
                    android:layout_toStartOf="@+id/rl"
                    android:src="@drawable/unlike" />
            </RelativeLayout>
        </RelativeLayout>



        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/llProfileView"
            android:background="@color/devider_desc" />

        <LinearLayout
            android:layout_below="@id/v"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:id="@+id/rlAddToWishList"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivLike"
                    android:src="@drawable/unlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvAddToWishList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.4sp"
                    android:fontFamily="@font/sf_ui_display_regular"

                    android:layout_marginLeft="10dp"
                    android:textColor="@color/profile_text_color"
                    android:gravity="center_horizontal"
                    android:text="@string/add_to_wishlist"
                    />

            </LinearLayout>
            <View
                android:layout_below="@id/llProfileView"
                android:background="@color/devider_desc"
                android:layout_width="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/llRemove"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14.4sp"
                    android:fontFamily="@font/sf_ui_display_regular"

                    android:layout_marginLeft="10dp"
                    android:textColor="@color/profile_text_color"
                    android:gravity="center_horizontal"
                    android:text="@string/delete"
                    />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
