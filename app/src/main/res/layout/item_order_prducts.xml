<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp">

    <RelativeLayout
android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llOrderNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_bold"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/order_no"
            android:textColor="@color/spec_desc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_regular"
            android:gravity="left"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:text="Bank Of0% off of fjfad"
            android:textColor="@color/profile_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_below="@id/llOrderNo"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlItem"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/ivProductImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/sf_ui_display_regular"
                        android:gravity="center"
                        android:src="@drawable/page_1"
                        android:text="%"
                        android:textColor="@color/offer_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="60dp"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/tvProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_ui_display_bold"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="Bank Of0% off of fjfad"
                        android:textColor="@color/offer_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_ui_display_regular"
                        android:gravity="left"
                        android:text="Quantity:1"
                        android:textColor="@color/spec_desc"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivDot"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="1dp"
                            android:gravity="center"
                            android:src="@drawable/ic_red_dot"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/tvDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_ui_display_regular"
                            android:gravity="center_vertical"
                            android:text="Bank Offer"
                            android:textColor="@color/spec_desc"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <Button

                            android:id="@+id/btnReorder"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/add_to_cart_button"
                            android:fontFamily="@font/sf_ui_display_regular"
                            android:text="@string/re_order"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <Button

                            android:id="@+id/btnCancel"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"

                            android:background="@drawable/bg_button_enable"
                            android:fontFamily="@font/sf_ui_display_regular"
                            android:text="@string/cancel"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <Button

                            android:id="@+id/btnViewStatus"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"

                            android:background="@drawable/bg_button_yellow"
                            android:fontFamily="@font/sf_ui_display_regular"
                            android:text="@string/viewStatus"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <TextView

                            android:id="@+id/tvMoreProducts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_ui_display_regular"
                            android:gravity="center_vertical"
                            android:text="Bank Offer"
                            android:textColor="@color/profile_text_color"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>


