<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rlView"
    android:layout_height="match_parent"
    tools:context="com.cheersondemand.view.fragments.FragmentProductsListing">


    <RelativeLayout
        android:id="@+id/rlbar"
        android:background="@drawable/top_banner"
        android:layout_width="match_parent"

        android:paddingBottom="10dp"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/imgBack"

            android:layout_marginLeft="25dp"
            android:layout_width="25dp"
            android:layout_alignParentBottom="true"

            android:layout_height="25dp">
            <ImageView
                android:layout_width="15dp"
                android:src="@drawable/back_white"
                android:layout_height="15dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sf_ui_display_regular"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:text="@string/product_listing"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlMainView"
        android:layout_below="@id/rlbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llSortView"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/llSort"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/sort"
                android:layout_width="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.4sp"
                android:fontFamily="@font/sf_ui_display_regular"

                android:layout_marginLeft="10dp"
                android:textColor="@color/profile_text_color"
                android:gravity="center_horizontal"
                android:text="@string/sort"
                />

        </LinearLayout>
        <View
            android:layout_below="@id/llProfileView"
            android:background="@color/profile_text_color"
            android:layout_width="1dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp"/>
        <LinearLayout
            android:id="@+id/llFilter"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/filter"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.4sp"
                android:fontFamily="@font/sf_ui_display_regular"

                android:layout_marginLeft="10dp"
                android:textColor="@color/profile_text_color"
                android:gravity="center_horizontal"
                android:text="@string/filter"
                />

        </LinearLayout>


    </LinearLayout>
    <View
        android:id="@+id/v"
        android:layout_below="@id/llSortView"
        android:background="@color/edit_text_border"
        android:layout_width="match_parent"

        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/v"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView

        android:id="@+id/rvProductsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
         />
    </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_below="@id/rlbar"
        android:background="@color/white"
        android:id="@+id/llNoProductInCount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:gravity="center_horizontal"
            android:text="@string/no_product_found"
            android:textColor="@color/profile_text_color"
            android:textSize="16.3sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_display_regular"
            android:gravity="center_horizontal"

            android:text="@string/try_search_diff"
            android:textColor="@color/profile_updated_text_color"
            android:textSize="14.4sp" />


        <Button
            android:id="@+id/btnBrowseProduct"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_button_enable"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@string/browse_product"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13.4sp" />
    </LinearLayout>

    <ProgressBar

        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="30dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="30dp"
        android:visibility="gone" />


</RelativeLayout>
