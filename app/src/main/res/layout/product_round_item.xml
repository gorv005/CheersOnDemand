<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@color/brands_back_color"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ivProductImageRl"

        android:background="@drawable/product_circular_border"
        android:layout_width="60dp"
        android:layout_height="60dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ivProductImage"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/missing"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"/>

    </RelativeLayout>

        <TextView
            android:id="@+id/tvBrandName"
            android:text="beers"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ivProductImageRl"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textColor="@color/brand_text_color"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
