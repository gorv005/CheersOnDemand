<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlAddName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/location"

            android:layout_centerVertical="true"
            android:background="@drawable/offer_per_back"
            android:layout_width="25dp"
            android:layout_height="25dp">
        <ImageView
            android:src="@drawable/placeholder_6"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:layout_width="12dp"
            android:layout_height="12dp" />
        </RelativeLayout>
        <TextView
            android:layout_toRightOf="@id/location"
            android:id="@+id/tvName"
            android:layout_marginLeft="15dp"
            android:textColor="@color/profile_text_color"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="Name"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>
    <TextView
        android:layout_below="@id/rlAddName"
        android:id="@+id/tvSubAddress"
        android:layout_marginLeft="50dp"
        android:textColor="@color/profile_text_color"
        android:fontFamily="@font/sf_ui_display_regular"
        android:text="Name"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/v"
        android:layout_below="@id/add"
        android:background="@color/edit_text_border"
        android:layout_width="match_parent"

        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_below="@id/v"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/llEdit"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.4sp"
                android:fontFamily="@font/sf_ui_display_regular"

                android:layout_marginLeft="10dp"
                android:textColor="@color/profile_text_color"
                android:gravity="center_horizontal"
                android:text="@string/edit"
                />

        </LinearLayout>
        <View
            android:background="@color/edit_text_border"
            android:layout_width="1dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="30dp"/>
        <LinearLayout
            android:id="@+id/llDelete"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.4sp"
                android:fontFamily="@font/sf_ui_display_regular"

                android:layout_marginLeft="10dp"
                android:textColor="@color/profile_text_color"
                android:gravity="center_horizontal"
                android:text="@string/delete_"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>