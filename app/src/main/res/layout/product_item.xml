<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/product_border"

    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="165dp"
        android:padding="2dp"
        android:background="@drawable/product_border"

        android:layout_height="250dp">

        <RelativeLayout
            android:id="@+id/rlImage"

            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="100dp">
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bitmap_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivLike"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:src="@drawable/unlike"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:id="@+id/tvProductName"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:layout_below="@id/rlImage"
            android:textColor="@color/view_all_color"
            android:lines="2"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Napa Valley Sauvignon Blanc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:text="$200"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textStyle="bold"
            android:id="@+id/tvProductPrice"
            android:layout_marginTop="7dp"
            android:layout_below="@id/tvProductName"
            android:textColor="@color/view_all_color"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:id="@+id/btnAddToCart"
            android:layout_alignParentBottom="true"
            android:background="@color/product_add_to_cart_back_color"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_centerInParent="true"
                android:text="@string/add_to_cart"
                android:fontFamily="@font/sf_ui_display_regular"
                android:textColor="@color/green_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:id="@+id/view"
            android:layout_above="@id/btnAddToCart"
            android:background="@color/product_border_color"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </RelativeLayout>

</RelativeLayout>
