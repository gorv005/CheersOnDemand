<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlView"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:padding="15dp"
        android:id="@+id/rlOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:id="@+id/ivProductImageRl"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/ivProductImage"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/missing"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_marginRight="55dp"
            android:layout_marginLeft="70dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView

            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="left"
            android:layout_gravity="left"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textColor="@color/profile_text_color"
            android:text="Bank Offer dfdfdfdfdfddghdghhgdhghghgghhghgdgh: 20% off on HDFC Credit Cards above $50 zdfdmnf fjfad"
            />

        </LinearLayout>
        <TextView
            android:id="@id/tvQuantity"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/rounded_white_orignal"
            android:layout_centerVertical="true"
            android:text="Qty:88"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textColor="@color/offer_text"
            android:src="@drawable/right_arrow"
            />


    </RelativeLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_below="@id/rlOrders"
        android:background="@color/offer_back"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>