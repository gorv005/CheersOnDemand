<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:background="@color/profile_back"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rlItem"

        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_centerVertical="true"
            android:background="@drawable/offer_per_back"
            android:layout_width="35dp"
            android:layout_height="35dp">

        <ImageView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:src="@drawable/page_1"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textColor="@color/offer_text"
            android:text="%"
            />
        </RelativeLayout>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView

            android:id="@+id/tvNotificationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="1"
            android:gravity="left"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:fontFamily="@font/sf_ui_display_bold"
            android:textColor="@color/offer_text"
            android:text="Bank Of0% off of fjfad"
            />
            <TextView
                android:ellipsize="end"
                android:gravity="left"
                android:layout_gravity="left"
                android:id="@+id/tvNotificationDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/sf_ui_display_regular"
                android:textColor="@color/offer_text"
                android:text="Bank Offer : 20% off on HDFC Credit Cards above $50"
                />
            <TextView

                android:ellipsize="end"
                android:gravity="left"
                android:layout_gravity="left"
                android:id="@+id/tvDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/sf_ui_display_regular"
                android:textColor="@color/offer_back"
                android:text="Bank Offer"
                />
        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_below="@id/rlItem"
        android:background="@color/profile_back"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_view"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="@color/profile_back"
        app:bring_to_clamp="150dp"
        app:gravity="right"
        android:orientation="vertical"
        app:sticky="10dp">

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/delete_button_1"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ivDelete"
            android:layout_height="wrap_content"
            />

        <TextView

            android:layout_below="@id/ivDelete"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textSize="14sp"
            android:layout_gravity="center"

            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/delete" />

        </LinearLayout>
    </RelativeLayout>


</ru.rambler.libs.swipe_layout.SwipeLayout>